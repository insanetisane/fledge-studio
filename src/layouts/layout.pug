include /components/loadCSS
block settings
  -
    title = "Fledge Studio"
    description = "Handcrafted, effective, and affordable websites."
    page = ''

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="manifest" href="/manifest.json")
    block title
      title #{title}

    block meta
      meta(name="description" content=description)

    block styles
      style
        include /css/reboot.css
        include /css/global.css
      +loadCss("https://fonts.googleapis.com/css?family=Roboto:300,500,800")
